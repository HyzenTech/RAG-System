# Groq API (optional - free tier available)
# GROQ_API_KEY=your_groq_api_key_here

# Alternative: OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# LLM Provider: "ollama", "groq", or "openai"
LLM_PROVIDER=ollama

# Ollama settings (default - runs locally, no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ChromaDB path
CHROMA_DB_PATH=./chroma_db

# Dataset limits
CVE_LIMIT=200
PERSONAL_LIMIT=100

# Benchmark API
BENCHMARK_BASE_URL=https://infosec.simpan.cv
